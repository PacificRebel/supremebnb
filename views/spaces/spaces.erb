<!DOCTYPE html>
 <head>
   <meta charset="utf-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <title></title>
   <meta name="description" content="">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
 </head>
 <body>
   <div class="container">
   <div class="row">
     <div class="col">

     </div>
     <div class="col-15">
       <% if @user %>
         <h1>Welcome back, <%= @user.username %>!</h1>
       <% end %>
         <h3> Find a space </h3>
     </div>
     <div class="col">

     </div>
   </div>
   <div class="row">
     <div class="col">

     </div>
     <div class="col-8">
       <% if @user %>
         <a href=/users/<%= @user.id %>/bookings type='submit' name='book'>Your Bookings</a>
       <% end %>

       <form action='/spaces'>
         <label for='date-of-stay'>Date</label>
         <input id='date-of-stay' type='date' name='date' value=<%= @date %>>
         <button type='submit' value='Submit'>Submit</button>
       </form>
     <div class="col">

     </div>
     </div>
   </div>
   <div class="row">
    <div class="col">
    </div>
    <div class="col-15">
      <% if @spaces %>
        <% @spaces.each do |space| %>
          <div>
            <div class="card text-center" style="width: 18rem;">
              <img class="card-img-top" src="..." alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= space.name %> </h5>
                <p class="card-text"><%= space.description %></p>
                <p class="card-text"><%= space.price %></p>
                <form action='/spaces/<%= space.id %>/bookings' method='post'>
                  <button class="btn btn-primary" type='submit' name='book'>Book</button>
                </form>
              </div>
            </div>

          </div>
          <%end%>
        <% end %>
    </div>
    <div class="col">
    </div>
  </div>
  </div>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" async defer></script>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" async defer></script>
 </body>
</html>
